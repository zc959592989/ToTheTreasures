<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="#aaddaa"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/img_base_activity_left"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#ff8000"
            />
        <TextView
            android:id="@+id/tv_base_activity_title"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:text="资讯"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/img_base_activity_right"
            android:src="@mipmap/ic_launcher"
            />
        <TextView
            android:background="#64747a"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:textColor="#ffffff"
            android:text="760跟帖"
            android:layout_marginRight="5dp"
            android:id="@+id/tv_base_activity_comment"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <ImageView
            android:visibility="gone"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/img_base_activity_favorite"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_activity_base"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>